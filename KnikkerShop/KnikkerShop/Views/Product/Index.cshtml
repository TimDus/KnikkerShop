@model KnikkerShop.Models.ProductViewModel

@{
    ViewData["Title"] = "Productenlijst";
}

<h2>Productenlijst</h2>

@if (User.IsInRole("beheerder"))
{
    <p>
        <a asp-action="Create">Nieuwe toevoegen</a>
    </p>
}
<div class="hidden" id="productContainer">
    <table class="table table-striped table-hover" id="productTable" style="width:100%;">
        <thead>
            <tr>
                <th>Naam</th>
                <th>Geslacht</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProductDetailViewModel item in Model.Products)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Naam)</td>
                    <td>@Html.DisplayFor(modelItem => item.Prijs)</td>
                    <td>
                        @if (User.IsInRole("admin"))
                        {
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        }
                        else
                        {
                            @Html.ActionLink("Details", "DoctorDetails", "Profile", new { id = item.Id })
                        }
                        @if (User.IsInRole("admin"))
                        {
                            @: | @Html.ActionLink("Aanpassen", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Verwijderen", "Delete", new { id = item.Id })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
            $("document").ready(function () {
                initDataTable();
                $("#productContainer").removeClass("hidden");
            });

        function initDataTable() {
            $("#productTable").DataTable({
                "language": {
                    "sProcessing": "Bezig...",
                    "sLengthMenu": "_MENU_ resultaten weergeven",
                    "sZeroRecords": "Geen resultaten gevonden",
                    "sInfo": "_START_ tot _END_ van _TOTAL_ resultaten",
                    "sInfoEmpty": "Geen resultaten om weer te geven",
                    "sInfoFiltered": " (gefilterd uit _MAX_ resultaten)",
                    "sInfoPostFix": "",
                    "sSearch": "Zoeken:",
                    "sEmptyTable": "Geen resultaten aanwezig in de tabel",
                    "sInfoThousands": ".",
                    "sLoadingRecords": "Een moment geduld aub - bezig met laden...",
                    "oPaginate": {
                        "sFirst": "Eerste",
                        "sLast": "Laatste",
                        "sNext": "Volgende",
                        "sPrevious": "Vorige"
                    },
                    "oAria": {
                        "sSortAscending": ": activeer om kolom oplopend te sorteren",
                        "sSortDescending": ": activeer om kolom aflopend te sorteren"
                    }
                }
            });
        }
    </script>
}