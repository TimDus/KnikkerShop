@model KnikkerShop.Models.WinkelwagenViewModel;
@using KnikkerShop.Models.Data;
@{
    ViewData["Title"] = "Index";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Cart Page</h3>
    <table class="table table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Hoeveelheid</th>
            <th>Sub Totaal</th>
        </tr>
        @foreach (Product p in Model.Producten)
        {
            <tr>
                <td>@p.Naam</td>
                <td>@p.Prijs</td>
                <td>@p.Aantal</td>
                <td><a asp-controller="Winkelwagen" asp-action="Delete" asp-route-id="@p.Id">Verwijderen</a></td>
            </tr>
        }
    </table>
    <br>
    <div class="form-group">
        <div class="col-xs-3">
            <label for="Enddate"><h4>Leverdatum</h4></label>
            <input type="date" class="form-control" asp-for="Leverdatum" placeholder="Einddatum behandeling" title="Einddatum behandeling">
            <span asp-validation-for="Leverdatum" class="text-danger"></span>
        </div>
    </div>
    <a asp-controller="Bestelling" asp-action="Plaatsen">Bestelling plaatsen</a>
</body>
</html>