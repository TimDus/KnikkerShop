@model KnikkerShop.Models.WinkelwagenViewModel;
@using LibraryKnikker.Core.DAL.Data;
@{
    ViewData["Title"] = "Index";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @if (Model == null)
    {
        <label>De Wagen is nog leeg.</label>
    }
    else
    {
        <h3>Cart Page</h3>
        <table class="table table-striped table-hover">
            <tr>
                <th>Naam</th>
                <th>Prijs</th>
                <th>Hoeveelheid</th>
                <th>Verwijderen</th>
            </tr>
            @foreach (Product p in Model.Producten)
            {
                <tr>
                    <td>@p.Naam</td>
                    <td>@(Convert.ToDecimal(p.Prijs) * p.Aantal)</td>
                    <td>@p.Aantal</td>
                    <td><a asp-controller="Winkelwagen" asp-action="Delete" asp-route-id="@p.Id">Verwijderen</a></td>
                </tr>

            }
            <tr>
                <td>Totaal:</td>
                <td></td>
                <td></td>
                <td>@Model.TotaalPrijs</td>
                <td></td>

            </tr>
        </table>
        <br>
        <a asp-controller="Webshop" asp-action="index">Verder Winkelen</a>
        <a asp-controller="Bestelling" asp-action="index">Producten bestellen</a>
    }
</body>
</html>